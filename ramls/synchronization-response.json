{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Synchronization response schema",
  "properties": {
    "id": {
      "type": "string",
      "description" : "Sync request ID",
      "$ref": "raml-util/schemas/uuid.schema"
    },
    "scope": {
      "type": "string",
      "description": "Scope of re-sync data"
    },
    "userId": {
      "type": "string",
      "description": "Users ID for if scope is [user]",
      "$ref": "raml-util/schemas/uuid.schema"
    },
    "status": {
      "type": "string",
      "description": "Status of sync request"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "scope",
    "status"
  ]
}
